<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta http-equiv="X-UA-Compatible" content="ie=edge" />
        <title>Ch24</title>
        <link rel="icon" href="/static/imgs/sigma.png" type="image/x-icon" />
        <link href="/static/css/output.css" rel="stylesheet" />
        <script src="/static/js/jquery_3.7.1.min.js"></script>
        <script src="/static/js/index.js"></script>
    </head>
    <body>
        <div class="relative flex min-h-screen flex-col px-8 py-4">
            <div class="mb-8 flex flex-col items-center text-3xl">
                Challenge 24
            </div>
            <div class="grid size-[35rem] grid-cols-2 gap-5">
                {% for i in range(4) %}
                <div
                    id="number_card_{{ i }}"
                    class="relative flex items-center justify-center rounded-xl border-2 border-black">
                    <div class="value text-5xl font-semibold"></div>
                    <div class="absolute bottom-0 right-0 mb-2 mr-4">
                        {{ i + 1 }}
                    </div>
                </div>
                {% endfor %}
            </div>

            <div class="absolute bottom-0 flex flex-row space-x-4">
                {% for op in ["+", "-", "*", "/"] %}
                <div
                    id="operator_{{ op }}"
                    value="{{ op }}"
                    class="flex size-24 items-center justify-center text-4xl">
                    {{ op }}
                </div>
                {% endfor %}
            </div>
        </div>
    </body>
</html>
